# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Aplicacion.index
GET     /login                                  Aplicacion.login
GET     /registro                               Aplicacion.registro
GET     /estados.json                           Estados.json
GET     /municipios/{clave}                     Municipios.json
GET     /publicaciones/{id}                     Publicaciones.list
POST    /authenticate                           Security.authenticate



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
